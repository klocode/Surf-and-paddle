<% if @post.errors.any? %>
   <div class="bg-danger col-xs-12">
     <ul class="list-unstyled">
       <% @post.errors.full_messages.each do |message| %>
         <li>
           <%= message %>
         </li>
       <% end %>
     </ul>
   </div>
<% end %>



<%= simple_form_for @post do |f| %>
  <%= f.input :title %>
  <%= f.input :body %>
  <%= f.input :photo %>
  <%= f.button :submit %>
<% end %>
