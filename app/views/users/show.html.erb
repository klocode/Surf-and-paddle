<div class="row">
  <div class="col-md-9">
    <!-- Main -->
    <div class="row">
      <div class="col-md-3">
        <%= image_tag @user.picture, class: "img-responsive" %>
        <% if current_user == @user %>
          <%= link_to "Edit profile", edit_user_path(@user), class: "btn btn-primary" %>
        <% end %>
      </div>
      <div class="col-md-9">
        <h2><%= @user.name %></h2>
        <h3>Bio</h3>
        <%= simple_format @user.bio %>
        <h3>Role</h3>
        <% if @user.admin%>
          <p>
            <b>Administrator</b>
          </p>
        <% else %>
          <p>
            <b>Member</b>
          </p>
          <% end %>
        <h3>Posts</h3>
        <%= render @user.posts %>
      </div>
    </div>
  </div>
</div>
